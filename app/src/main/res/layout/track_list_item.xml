<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/colorSecondary">

    <ImageView
        android:id="@+id/imageViewCover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="@dimen/margin_8"
        android:layout_marginStart="13dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/textViewTrackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_66"
        android:layout_marginTop="@dimen/margin_14"
        android:layout_marginEnd="@dimen/margin_44"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_size_16"
        tools:text="Название трека" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_66"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_44"
        android:layout_marginBottom="@dimen/margin_14"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewArtistName"
            style="@style/artistNameTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="Исполнитель" />

        <ImageView
            android:id="@+id/imageViewDotIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_dot"
            app:tint="?attr/colorSecondaryVariant"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textViewTrackTime"
            style="@style/artistNameTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Время" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewArrowForwardIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_arrow_forward"
        app:tint="?attr/colorSecondaryVariant"
        tools:ignore="ContentDescription" />

</androidx.cardview.widget.CardView>