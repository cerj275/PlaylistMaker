<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_menu_textSize</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_10</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="SettingsMenuButtonStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingTop">@dimen/padding_20</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_20</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_menu_textSize</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TopBarTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/main_menu_textSize</item>
    </style>

</resources>