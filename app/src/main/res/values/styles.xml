<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_10</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="SettingsMenuButtonStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingTop">@dimen/padding_20</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_20</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="textViewTopBarStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
    </style>

    <style name="artistNameTextViewStyle">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="searchMenuTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>

    <style name="searchMenuButtonStyle">
        <item name="android:backgroundTint">?attr/colorButtonNormal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="cornerRadius">@dimen/refresh_button_corner_radius</item>
    </style>

    <style name="MediaTitleTextStyle">
        <item name="android:textColor">@color/yp_grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MediaDescriptionTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="itemIconTint">@drawable/bottom_navigation</item>
        <item name="itemTextColor">@drawable/bottom_navigation</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="boxStrokeColor">@color/new_playlist_color_text</item>
        <item name="android:letterSpacing">0.4</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_field_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_field_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_field_radius</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">@color/yp_grey</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <dimen name="text_field_radius">4dp</dimen>
</resources>